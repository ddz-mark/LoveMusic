<?xml version="1.0" encoding="utf-8"?>
<com.github.obsessive.simplifyreader.widgets.PlayerDiscView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/player_disc_container"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_centerInParent="true"
        android:background="@drawable/disc_base"
        android:padding="5dp"
        android:layout_margin="25dp">

        <ImageView
            android:id="@+id/player_disc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/disc"/>

        <ImageView
            android:id="@+id/player_disc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/player_disc"
            android:layout_alignLeft="@id/player_disc"
            android:layout_alignRight="@id/player_disc"
            android:layout_alignTop="@id/player_disc"
            android:layout_margin="45dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/player_needle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/player_disc_container"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/stick"/>

</com.github.obsessive.simplifyreader.widgets.PlayerDiscView>